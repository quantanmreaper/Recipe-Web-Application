    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/api/random-recipes')
                .then(response => response.json())
                .then(data => {
                    if (Array.isArray(data)) {
                        const tutorialsDiv = document.getElementById('tutorials');
                        data.forEach(recipe => {
                            const videoFrame = document.createElement('iframe');
                            videoFrame.width = "600";
                            videoFrame.height = "315";
                            videoFrame.src = `https://www.youtube.com/embed/${recipe.youtubeId}`;
                            videoFrame.frameBorder = "0";
                            videoFrame.allow = "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture";
                            videoFrame.allowFullscreen = true;
                            tutorialsDiv.appendChild(videoFrame);
                        });
                    } else {
                        console.error('Data is not an array:', data);
                    }
                })
                .catch(error => console.error('Error fetching recipes:', error));
        });
    </script>
